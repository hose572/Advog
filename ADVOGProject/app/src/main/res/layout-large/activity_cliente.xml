<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/cliente_frags"
    tools:context="com.tibaes.advogproject.ClienteActivity">

    <fragment
        class="com.tibaes.advogproject.ListaClienteFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/lista_cliente_frag"/>

    <fragment class="com.tibaes.advogproject.NovoClienteFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/novo_cliente_frag"/>
</LinearLayout>

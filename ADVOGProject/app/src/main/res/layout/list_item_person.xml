<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tibaes.advogproject.com.tibaes.advog_project.util.CircleImageView
        android:id="@+id/item_list_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/people_edited"
        app:civ_border_color="@color/colorObject"
        app:civ_border_width="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/colorLighyGrey">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/item_list_name"
            android:text="Nome"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorObject"/>

        <TextView
            android:id="@+id/item_list_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:text="(42) 99999-999"
            android:textColor="@color/colorObject"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Cria uma linha entre um item e outro-->
          <View
             android:id="@+id/vw_divider"
             android:layout_marginTop="10dp"
             android:background="@color/colorPrimary"
             android:layout_width="match_parent"
             android:layout_height="0.8dp" />
    </LinearLayout>

</LinearLayout>